#!/bin/bash

KCADM="<%= scope['keycloak::install_base'] %>/bin/kcadm.sh"

${KCADM} "$@"
if [ $? -ne 0 ]; then
  ${KCADM} config credentials --server '<%= scope['keycloak::wrapper_server'] %>' --realm master --user '<%= scope['keycloak::admin_user'] %>' --password '<%= scope['keycloak::admin_user_password'] %>'
  ${KCADM} "$@"
fi
